<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hyerim.my.foodstreet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_meal_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_meal_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.DetailReviewActivity" />
        <activity android:name=".activity.EditReviewActivity" />
        <activity android:name=".activity.MainDetailActivity" />
        <activity android:name=".auth.LoginActivity" />
        <activity android:name=".auth.JoinActivity" />
        <activity android:name=".activity.FoodListActivity" />
        <activity android:name=".activity.MainActivity"/>

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="sad7m2l0u2" />
    </application>

</manifest>